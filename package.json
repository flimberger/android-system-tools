{
    "name": "android-system-tools",
    "displayName": "Android System Tools",
    "description": "Syntax support for file formats used in Android system development.",
    "version": "0.0.2",
    "publisher": "flimberger",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flimberger/android-system-tools.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": ["onLanguage:blueprint"],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Android System Tools configuration",
            "properties": {
                "android_systools.bpfmt.executable": {
                    "type": "string",
                    "description": "Path to the bpfmt executable."
                },
                "android_systools.bpfmt.flags": {
                    "type": "list",
                    "description": "Flags for the bpfmt tool."
                }
            }
        },
        "languages": [{
            "id": "blueprint",
            "aliases": ["Android Blueprint", "blueprint"],
            "extensions": [".bp"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "blueprint",
            "scopeName": "source.bp",
            "path": "./syntaxes/blueprint.tmLanguage.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -watch -p ."
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.36.0",
        "typescript": "^3.5.1"
    }
}
